@page
@using Q2.DTO
@model Q2.Pages.Student.ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<table border="1">
    <thead>
    <th>StudentId</th>
    <th>FullName</th>
    <th>Dob</th>
    <th>Gender</th>
    <th>Action Detail</th>
    <th>Action Delete</th>
    </thead>
    <tbody>
        @foreach (StudentDTO x in Model.elist)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.FullName</td>
                <td>@x.Dob</td>
                <td>@x.Gender</td>
                <td><a asp-page="./Fun1" asp-route-did="@x.Id">Detail</a></td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-did="@x.Id" style="display:inline;">
                        <button type="submit" class="btn btn-link" style="padding: 0; border: none; background: none; color: blue; cursor: pointer;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

